<Button@Button>:
    font_size: 20
<Josh>:
    id: calculator
    display: dat_input
    cols: 1
    TextInput:
        id: dat_input
        text:''
        multiline: False
        size_hint: 1, .2
        font_size: 32
        readonly: True
        multiline: False
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation:'horizontal'
            Button:
                text: 'AC'
                background_color: 0, 0, 0, .4
                on_release: dat_input.text=''
            Button:
                text: '+/-'
                background_color: 0, 0, .0, .3
            Button:
                text: 'Del'
                background_color: 0, 0, 0, .2
                on_release: dat_input.text = dat_input.text[:-1]

        BoxLayout:

            Button:
                text: '1'
                on_release: dat_input.text += self.text
            Button:
                text: '2'
                on_release: dat_input.text += self.text
            Button:
                text: '3'
                on_release: dat_input.text += self.text
            Button:
                text: '/'
                background_color: .8, 0, 0, .3
                on_release: dat_input.text += self.text
        BoxLayout:

            Button:
                text: '4'
                on_release: dat_input.text += self.text
            Button:
                text: '5'
                on_release: dat_input.text += self.text
            Button:
                text: '6'
                on_release: dat_input.text += self.text
            Button:
                text: '*'
                background_color: .8, 0, 0, .3
                on_release: dat_input.text += self.text
        BoxLayout:

            Button:
                text: '7'
                on_release: dat_input.text += self.text
            Button:
                text: '8'
                on_release: dat_input.text += self.text
            Button:
                text: '9'
                on_release: dat_input.text += self.text
            Button:
                text: '-'
                background_color: .8, 0, 0, .3
                on_release: dat_input.text += self.text
        BoxLayout:
            Button:
                text: '.'
                background_color: .8, 0, 0, .3
                on_release: dat_input.text += self.text
            Button:
                text: '0'
                on_release: dat_input.text += self.text
            Button:
                text: '='
                background_color: .8, 0, 0, .3
                on_release: calculator.calculated(dat_input.text)
            Button:
                text: '+'
                background_color: .8, 0, 0, .3
                on_release: dat_input.text += self.text

